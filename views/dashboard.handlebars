<title>Dashboard</title>

<section>
    <div class="header-section p-4">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="card h-100">
                        <div class="card-body p-4">
                            <h3 class="card-title text-center mb-4">Create Post</h3>
                            <form id="create-post-form">
                                <div class="mb-3">
                                    <label for="post-title" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="post-title" name="title" required>
                                </div>
                                <div class="mb-3">
                                    <label for="post-text" class="form-label">Text</label>
                                    <textarea class="form-control" id="post-text" name="text" rows="4"
                                        required></textarea>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section>
    <div class="header-section p-4">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {{#each posts as |post|}}
                <div class="col mb-5">
                    <div class="card h-100">
                        <form class="edit-post-form">
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="product_h5 seller-name">Poster: {{post.poster.name}} </h5>
                                    <div class="form-group">
                                        <label for="post-title-{{post.post_id}}">Title</label>
                                        <input type="text" class="form-control" id="post-title-{{post.post_id}}"
                                            value="{{post.title}}">
                                    </div>
                                    <div class="form-group">
                                        <label for="post-text-{{post.post_id}}">Text</label>
                                        <textarea class="form-control" id="post-text-{{post.post_id}}"
                                            rows="3">{{post.text}}</textarea>
                                    </div>
                                    <p class="product_p amount-available">Posted Time: {{post.posted_time}}</p>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="edit-btn btn btn-outline-dark flex-fill mx-2"
                                        data-id="{{post.post_id}}">Edit</button>
                                    <a class="delete-btn btn btn-outline-dark flex-fill mx-2"
                                        data-id="{{post.post_id}}">Delete</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>


<script src="/js/dashboard.js"></script>