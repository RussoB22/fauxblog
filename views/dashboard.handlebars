<title>Dashboard</title>


<section>
    <div class="header-section p-4">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row justify-content-center">
                <div class="d-block">
                    <div class="card h-100 rounded-4">
                        <div class="card-body p-1 bg-black rounded-3">
                            <h3 class="card-title text-center text-white px-2">Create Post</h3>
                            <form id="create-post-form" class="bg-success-subtle rounded-2 p-2">
                                <div class="mb-3">
                                    <label for="post-title" class="form-label">Title</label>
                                    <input type="text" class="form-control" id="post-title" name="title" required>
                                </div>
                                <div class="mb-3">
                                    <label for="post-text" class="form-label">Text</label>
                                    <textarea class="form-control" id="post-text" name="text" rows="4"
                                        required></textarea>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section>
    <div class="header-section p-4">
        <div class="container px-4 mt-5">
            <div class="d-block justify-content-center">
                {{#each posts as |post|}}
                <div class="col mb-5 p-1 bg-black rounded-3">
                    <div class="card h-100 rounded-3">
                        <form class="edit-post-form ">
                            <div class="card-body bg-success-subtle rounded-top-3 ">
                                <div class="">
                                    <div class="form-group" data-id="{{post.post_id}}">
                                        <label for="post-title-{{post.post_id}}" class="post-card d-block post-card enhanced"
                                            data-id="{{post.post_id}}">Title</label>
                                        <input type="text" class="form-control post-title"
                                            id="post-title-{{post.post_id}}" value="{{post.title}}">
                                    </div>
                                    <div class="form-group post-text" id="post-text-{{post.post_id}}"
                                        style="display: none;">
                                        <label for="post-text-{{post.post_id}}">Text</label>
                                        <textarea class="form-control" id="post-text-area-{{post.post_id}}"
                                            rows="3">{{post.text}}</textarea>
                                        <p class="product_p mt-2">Posted Time: {{post.posted_time}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-black rounded-bottom-3 p-1 post-card justify-content-evenly align-items-center"
                                data-id="{{post.post_id}}" style="display: none;">
                                <div class="">
                                    <button type="submit" class="edit-btn btn btn-outline-dark px-5 bg-white enhanced"
                                        data-id="{{post.post_id}}">Edit</button>
                                    <a class="delete-btn btn btn-outline-dark px-5 bg-white enhanced"
                                        data-id="{{post.post_id}}">Delete</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>


<script src="/js/dashboard.js"></script>